{
    "manifest_version": 2,
    "name": "DGG Bigscreen Revived",
    "description": "Automatically inserts Destiny's YouTube livestream into the DGG Bigscreen.",
    "version": "1.2",
    "browser_specific_settings": {
        "gecko": {
            "id": "dgg-embed@knowyourinfluencer.io",
            "strict_min_version": "42.0]"
        }
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "<all_urls>"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    }
}